<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent" android:orientation="vertical" android:layout_width="fill_parent">
    <LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/linearLayoutChoose">
        <HorizontalScrollView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/horizontalScrollViewChoose">
            <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="horizontal" android:id="@+id/linearLayoutChooseEmoji">
            </LinearLayout>
        </HorizontalScrollView>
        <ImageButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:src="@android:drawable/ic_input_delete" android:id="@+id/imageButtonBS"></ImageButton>
    </LinearLayout>
    <LinearLayout android:id="@+id/LinearLayoutRecent" android:layout_gravity="top" android:layout_width="wrap_content" android:orientation="vertical" android:layout_height="fill_parent" android:layout_weight="2">
        <TextView android:id="@+id/textView1" android:layout_height="wrap_content" android:text="@string/text_recent" android:layout_width="fill_parent"></TextView>
        <GridView android:verticalSpacing="10dp" android:layout_gravity="bottom" android:horizontalSpacing="10dp" android:columnWidth="40dp" android:layout_width="fill_parent" android:gravity="center" android:stretchMode="columnWidth" android:id="@+id/gridViewRecent" android:layout_height="fill_parent" android:numColumns="auto_fit"></GridView>
    </LinearLayout>
    <LinearLayout android:layout_gravity="top" android:layout_width="wrap_content" android:id="@+id/linearLayoutEmoji" android:orientation="vertical" android:layout_height="fill_parent" android:layout_weight="1">
        <TextView android:id="@+id/TextView01" android:layout_height="wrap_content" android:text="@string/text_list" android:layout_width="fill_parent"></TextView>
        <GridView android:layout_height="wrap_content" android:id="@+id/gridViewEmoji" android:horizontalSpacing="10dp" android:columnWidth="40dp" android:layout_gravity="bottom" android:layout_width="fill_parent" android:stretchMode="columnWidth" android:numColumns="auto_fit" android:verticalSpacing="10dp" android:gravity="center"></GridView>
    </LinearLayout>
    <LinearLayout android:layout_height="wrap_content" android:layout_weight="0" android:layout_width="fill_parent" android:id="@+id/linearLayoutButton">
        <Button android:layout_height="wrap_content" android:text="@string/button_cancel" android:layout_width="wrap_content" android:id="@+id/buttonCancel" android:layout_weight="1"></Button>
        <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/buttonOk" android:text="@string/button_ok" android:layout_weight="1"></Button>
    </LinearLayout>
</LinearLayout>
